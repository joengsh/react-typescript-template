{
  "include": ["../node_modules/cypress", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["dom", "ES6"],
    "strict": true,
    "sourceMap": true,
    "baseUrl": "../",
    "types": ["cypress", "@cypress/grep"],
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@api/*": ["src/api/*"],
      "@common/*": ["../fe-design-system-ts/src/*"],
      "@connection/*": ["../fe-connection-ts/src/*"]
    }
  }
}
