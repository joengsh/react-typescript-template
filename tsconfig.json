{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["../fe-design-system-ts/src/*"],
      "@connection/*": ["../fe-connection-ts/src/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "exclude": ["node_modules", "./cypress.config.ts"],
  "include": ["src", "config/utils.js"]
}
