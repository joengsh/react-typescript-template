{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "outDir": "lib",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["../fe-design-system-ts/src/*"],
      "@connection/*": ["../fe-connection-ts/src/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "exclude": [
    "node_modules",
    "./cypress.config.ts",
    "./src/__test__/**/*",
    "**/*.stories.*",
    "**/*.test.*"
  ],
  "include": ["src", "config/utils.js", "node_modules/microbundle/index.d.ts"]
}
